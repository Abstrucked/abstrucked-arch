#!/bin/bash
# claude-code-launcher - Launch Claude Code

# Check if installed
if ! command -v claude &> /dev/null; then
    echo "Claude Code not installed. Run the ide-chooser script to install."
    exit 1
fi

# Load API keys if requested
if [[ -n "${LOAD_API_KEYS:-}" ]] && [[ -f "$HOME/.local/bin/load-api-keys.sh" ]]; then
    source "$HOME/.local/bin/load-api-keys.sh"
fi

# Launch with arguments
exec claude "$@"
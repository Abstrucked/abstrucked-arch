# SSH Configuration
# Global options
Host *
    # Security
    PasswordAuthentication no
    ChallengeResponseAuthentication no
    PubkeyAuthentication yes
    HostKeyAlgorithms ssh-ed25519-cert-v01@openssh.com,ssh-rsa-cert-v01@openssh.com,ssh-ed25519,ssh-rsa,ecdsa-sha2-nistp256,ecdsa-sha2-nistp521,ecdsa-sha2-nistp384

    # Connection settings
    ConnectTimeout 10
    ServerAliveInterval 60
    ServerAliveCountMax 3

    # Performance
    ControlMaster auto
    ControlPath ~/.ssh/master-%r@%h:%p
    ControlPersist 10m

    # Identity
    IdentityFile ~/.ssh/id_ed25519
    IdentityFile ~/.ssh/id_rsa

# Example host configurations (customize as needed)
# Host github
#     HostName github.com
#     User git
#     IdentityFile ~/.ssh/github_key

